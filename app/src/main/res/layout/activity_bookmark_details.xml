<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="2dp"
    app:contentPadding="5sp"
    >

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="username" />

    <ImageView
        android:id="@+id/postImageBookmark"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_gravity="right">

            <ImageView
                android:id="@+id/btnBookmarkSelected"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="273dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="right"
                android:src="@drawable/bookmark_selected" />


        </LinearLayout>

        <TextView
            android:id="@+id/postTitleBookmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="5sp"
            android:layout_marginLeft="120dp"
            tools:text="Title"
            />

        <TextView
            android:id="@+id/postDescriptionBookmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="5sp"
            android:layout_marginLeft="120dp"
            tools:text="Description"/>

        <!-- Like, Comment, Bookmark Options -->
        <LinearLayout
            android:layout_width="386dp"
            android:layout_height="27dp"
            android:layout_marginTop="90dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnLike"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/like" />

            <TextView
                android:id="@+id/likeCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                />

            <ImageView
                android:id="@+id/btnComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:drawablePadding="8dp"
                android:focusable="true"
                android:src="@drawable/comment" />


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>